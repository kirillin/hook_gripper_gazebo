<?xml version="1.0"?>
<robot name="hook_gripper" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find hook_gripper_gazebo)/urdf/hook_gripper.urdf.xacro" />
  <xacro:arg name="prefix" default="" />

  <!-- Desribe 1-dof robot -->
  <link name="world" />

  <joint name="joint" type="prismatic">
    <origin xyz="0 0 0" rpy="3.14 0 0" />
    <parent link="world" />
    <child link="tool0" />
    <axis xyz="0 0 1" />
    <limit effort="300" velocity="1.0" lower="-1" upper="1" />
    <dynamics damping="0.0" />
  </joint>

  <link name="tool0">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.01" />
      </geometry>
      <material name="Grey">
        <color rgba="1.0 0.3 0.3 1.0" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="0.01" />
      </geometry>
    </collision>
  </link>

  <transmission name="trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <gazebo>
    <plugin name="ros_control" filename="libgazebo_ros_control.so">
      <robotParam>robot_description</robotParam>
    </plugin>
  </gazebo>


  <!-- connect to 1-dof robot The Hook fripper -->
  <xacro:hook_gripper prefix="$(arg prefix)" parent="tool0" obj="box" obj_link="box1" />

</robot>